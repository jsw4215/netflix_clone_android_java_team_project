<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transparent"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.single.SingleActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/like_like"
        android:src="@drawable/like"
        android:layout_marginRight="-10dp"
        app:civ_border_color="@color/silver"
        app:civ_border_width="1dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="70dp"
        android:src="@drawable/like_x_mark"
        android:id="@+id/like_x_mark"
        app:civ_border_color="@color/silver"
        app:civ_border_width="1dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/like_hate"
        android:src="@drawable/hate"
        android:layout_marginLeft="-10dp"
        app:civ_border_color="@color/silver"
        app:civ_border_width="1dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

</LinearLayout>