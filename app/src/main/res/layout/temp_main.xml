<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingTop="?attr/actionBarSize">

    <ScrollView
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/main_mid_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/poster_main"
                tools:ignore="MissingConstraints" />

            <include
                layout="@layout/toolbar_main"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="소름 - 폭력 - 흥미진진 - 액션 - 시대물 - 스릴러 - 드라마"
                android:textColor="@color/white" />
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_margin="20dp"
                android:paddingEnd="10dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_check_olny_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="12sp"
                    android:text="내가 찜한 콘텐츠"
                    android:textColor="@color/light_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Button
                android:layout_gravity="center"
                android:backgroundTint="@color/light_gray"
                android:text="재생"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/ic_play_arrow_black"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_margin="10dp"
                android:paddingStart="30dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_alert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="12sp"
                    android:text="정보"
                    android:textColor="@color/light_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/light_gray"
            android:text="미리보기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/poster"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/circle_poster1"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="0.5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/poster"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/circle_poster2"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="0.5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/poster"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/circle_poster3"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="0.5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/poster"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/circle_poster4"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="0.5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"/>

            </LinearLayout>
        </HorizontalScrollView>

    <!--내가찜한 콘텐츠-->

        <TextView
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/light_gray"
            android:text="내가 찜한 콘텐츠"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/picked_contents_poster1"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/picked_contents_poster2"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/picked_contents_poster3"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/picked_contents_poster4"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/picked_contents_poster5"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>


            </LinearLayout>
        </HorizontalScrollView>

        <!--절찬 스트리밍 중-->

        <TextView
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/light_gray"
            android:text="절찬 스트리밍 중: 시즌1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="▶ 재생"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/light_gray"
                android:layout_marginLeft="40dp"
                android:textSize="15sp"
                android:text="+ 내가 찜한 콘텐츠"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

<!--지금 뜨는 콘텐츠-->
        <TextView
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/light_gray"
            android:text="지금 뜨는 콘텐츠"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rising_poster1"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/rising_poster2"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/rising_poster3"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/rising_poster4"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/rising_poster5"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>


            </LinearLayout>
        </HorizontalScrollView>

        <!--오늘 한국의 TOP 10 콘텐츠-->
        <TextView
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/light_gray"
            android:text="지금 뜨는 콘텐츠"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ranking_1"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/ranking_2"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/ranking_3"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/ranking_4"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/ranking_5"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/ranking_6"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/ranking_7"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/ranking_8"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/ranking_9"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/ranking_10"
                    android:src="@drawable/poster"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <include layout="@layout/main_ranking"/>






        <!--전체스크롤뷰 닫는 부분-->
    </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/black"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>