<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mem_top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/adv_tv_neflix_logo"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_netflix_icontext"
                tools:ignore="MissingConstraints,VectorDrawableCompat" />

            <TextView
                android:id="@+id/adv_tv_customer_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_toStartOf="@+id/adv_tv_login"
                android:text="고객 센터"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/adv_tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:text="로그인"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/reg_rel_layout1"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_below="@+id/reg_top_toolbar">

        <ImageView
            android:id="@+id/reg_mid_laptop"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_laptop"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"/>

        <ImageView
            android:id="@+id/reg_mid_desktop"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_toEndOf="@+id/reg_mid_laptop"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_desktop" />

        <ImageView
            android:id="@+id/reg_mid_tablet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/reg_mid_desktop"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_tablet" />

        <ImageView
            android:id="@+id/reg_mid_phone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toEndOf="@+id/reg_mid_tablet"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_phone" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/reg_lin_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_rel_layout1"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/3단계"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="계정을 등록하세요."
            />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맞춤형 콘텐츠 서비스, 넷플릭스! ID와 비밀번호를 설정하여 다양한 디바이스에서 Netflix를 시청하세요."
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"/>

    </LinearLayout>


    <Button
        android:id="@+id/reg_btn_next"
        android:layout_below="@+id/reg_lin_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/buttonColor"
        android:text="다음"
        android:textSize="17sp"
        android:textColor="@color/white"/>

</RelativeLayout>