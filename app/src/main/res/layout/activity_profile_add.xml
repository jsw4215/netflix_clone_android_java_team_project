<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".src.profile.ProfileAddActivity">

    <include layout="@layout/profile_add_top_tool_bar"/>

    <ImageView
        android:id="@+id/profile_add_iv_profile"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/profile1"/>

    <ImageView
        android:layout_marginStart="50dp"
        android:layout_marginTop="-30dp"
        android:layout_gravity="center"
        android:background="@color/light_gray"
        app:srcCompat="@drawable/ic_edit"
        android:id="@+id/profile_add_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <EditText
        android:id="@+id/profile_add_et_profile_name"
        android:background="@drawable/white_border_rectangle"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="프로필 이름"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Switch
        android:textColor="@color/white"
        android:text="어린이용  "
        android:track="@drawable/switch_track_selector"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>