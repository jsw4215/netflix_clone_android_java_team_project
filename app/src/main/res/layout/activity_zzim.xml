<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".src.main.toptools.ZzimActivity">

    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/zzim_top_tool_bar"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/main_tool_top_icon"
                android:src="@drawable/n_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="7dp" />

            <TextView
                android:id="@+id/main_tv_top_zzim"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:text="내가 찜한 콘텐츠"
                android:drawableRight="@drawable/ic_arrow_down"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <GridLayout
        app:layout_constraintTop_toBottomOf="@id/zzim_top_tool_bar"
        android:id="@+id/zzim_gl_poster"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
        android:src="@drawable/poster_sample"
        android:id="@+id/zzim_poster1"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_width="115dp"
        android:layout_height="150dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"/>

        <ImageView
            android:src="@drawable/poster_sample"
            android:id="@+id/zzim_poster2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"/>

        <ImageView
            android:src="@drawable/poster_sample"
            android:id="@+id/zzim_poster3"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"/>

        <ImageView
            android:src="@drawable/poster_sample"
            android:id="@+id/zzim_poster4"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"/>

        <ImageView
            android:src="@drawable/poster_sample"
            android:id="@+id/zzim_poster5"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"/>

        <ImageView
            android:src="@drawable/poster_sample"
            android:id="@+id/zzim_poster6"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"/>

        <ImageView
            android:src="@drawable/poster_sample"
            android:id="@+id/zzim_poster7"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"/>

        <ImageView
            android:src="@drawable/poster_sample"
            android:id="@+id/zzim_poster8"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"/>

        <ImageView
            android:src="@drawable/poster_sample"
            android:id="@+id/zzim_poster9"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"/>

    </GridLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:itemIconTint="@color/bottom_navigation_selector"
        app:itemTextColor="@color/bottom_navigation_selector"
        android:background="@color/black"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>