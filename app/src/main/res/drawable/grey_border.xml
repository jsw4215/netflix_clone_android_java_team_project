<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="1dp">

    <item
        android:bottom="1dp"
        android:top="1dp"
        android:right="1dp"
        android:left="1dp"
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/white"/>
            <stroke
                android:color="@color/blue"
                android:width="1dp"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:top="1dp"
        android:right="1dp"
        android:left="1dp">

        <shape
            android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/loginColor"/>
            <solid
                android:backgroundTint = "@color/loginColor"
                android:color="@color/white"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
</layer-list>