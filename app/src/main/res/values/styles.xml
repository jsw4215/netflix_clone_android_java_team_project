<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/loginColor</item>
        <item name="android:textColorHint">@color/loginColor</item>
        <item name="colorControlNormal">@color/loginColor</item>
        <item name="colorControlActivated">@color/loginColor</item>
        <item name="colorControlHighlight">@color/loginColor</item>
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/loginColor</item>
    </style>

    <style name="AppTheme.red">
        <item name="colorAccent">@color/design_default_color_error</item>
    </style>

    <style name="MyAlertDialogStyle" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="MyItemFont" parent="android:Widget.TextView">
        <item name="android:textSize">4sp</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
</resources>
